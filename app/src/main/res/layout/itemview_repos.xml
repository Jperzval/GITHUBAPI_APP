<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_sz8"
    android:gravity="center"
    android:padding="@dimen/padding_sz24"
    app:cardCornerRadius="@dimen/margin_sz8">

    <TextView
        android:id="@+id/repo_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_sz60"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_sz32"
        android:foreground="?selectableItemBackground"
        tools:targetApi="m" />

</android.support.v7.widget.CardView>